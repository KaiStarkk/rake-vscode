{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Rake",
  "scopeName": "source.rake",
  "patterns": [
    { "include": "#comments" },
    { "include": "#definitions" },
    { "include": "#tine-declarations" },
    { "include": "#sweep-arms" },
    { "include": "#keywords" },
    { "include": "#tines" },
    { "include": "#scalars" },
    { "include": "#function-calls" },
    { "include": "#operators" },
    { "include": "#punctuation" },
    { "include": "#types" },
    { "include": "#literals" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.rake",
          "match": "~~.*$"
        }
      ]
    },
    "definitions": {
      "patterns": [
        {
          "match": "\\b(stack|single)\\s+([A-Z][a-zA-Z0-9_]*)\\s*(\\{)",
          "captures": {
            "1": { "name": "keyword.other.rake" },
            "2": { "name": "entity.name.type.rake" },
            "3": { "name": "punctuation.definition.block.rake" }
          }
        },
        {
          "match": "\\b(crunch|rake|run)\\s+([a-z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.other.rake" },
            "2": { "name": "entity.name.function.rake" }
          }
        },
        {
          "match": "\\b(type)\\s+([A-Z][a-zA-Z0-9_]*)\\s*(=)",
          "captures": {
            "1": { "name": "keyword.other.rake" },
            "2": { "name": "entity.name.type.rake" },
            "3": { "name": "keyword.operator.rake" }
          }
        }
      ]
    },
    "tine-declarations": {
      "patterns": [
        {
          "match": "(\\|)\\s*(#[a-z_][a-zA-Z0-9_]*)\\s*(:=)",
          "captures": {
            "1": { "name": "punctuation.separator.rake" },
            "2": { "name": "entity.name.tag.rake" },
            "3": { "name": "keyword.operator.assignment.rake" }
          }
        }
      ]
    },
    "sweep-arms": {
      "patterns": [
        {
          "match": "(\\|)\\s*(#[a-z_][a-zA-Z0-9_]*|_)\\s*(->)",
          "captures": {
            "1": { "name": "punctuation.separator.rake" },
            "2": { "name": "entity.name.tag.rake" },
            "3": { "name": "keyword.operator.arrow.rake" }
          }
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.rake",
          "match": "\\b(through|sweep|over|else)\\b"
        },
        {
          "name": "keyword.other.rake",
          "match": "\\b(let|fun|in|stack|single|crunch|rake|run|type)\\b"
        },
        {
          "name": "keyword.operator.word.rake",
          "match": "\\b(and|or|not|is)\\b"
        }
      ]
    },
    "tines": {
      "patterns": [
        {
          "name": "entity.name.tag.rake",
          "match": "#[a-z_][a-zA-Z0-9_]*"
        }
      ]
    },
    "scalars": {
      "patterns": [
        {
          "begin": "<",
          "end": ">",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.scalar.begin.rake" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.definition.scalar.end.rake" }
          },
          "name": "meta.scalar.rake",
          "patterns": [
            {
              "name": "constant.numeric.float.rake",
              "match": "-?[0-9]+\\.[0-9]*([eE][+-]?[0-9]+)?"
            },
            {
              "name": "constant.numeric.integer.rake",
              "match": "-?[0-9]+"
            },
            {
              "name": "variable.other.constant.rake",
              "match": "[a-z_][a-zA-Z0-9_.]*"
            }
          ]
        }
      ]
    },
    "function-calls": {
      "patterns": [
        {
          "match": "\\b([a-z_][a-zA-Z0-9_]*)\\s*(\\()",
          "captures": {
            "1": { "name": "entity.name.function.rake" },
            "2": { "name": "punctuation.definition.arguments.begin.rake" }
          }
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arrow.rake",
          "match": "->|<-"
        },
        {
          "name": "keyword.operator.assignment.rake",
          "match": ":="
        },
        {
          "name": "keyword.operator.pipe.rake",
          "match": "\\|>"
        },
        {
          "name": "keyword.operator.shuffle.rake",
          "match": "~>"
        },
        {
          "name": "keyword.operator.cross.rake",
          "match": "><"
        },
        {
          "name": "keyword.operator.reduce.rake",
          "match": "\\\\[+*]/"
        },
        {
          "name": "keyword.operator.reduce.rake",
          "match": "\\\\(min|max|\\||&)/"
        },
        {
          "name": "keyword.operator.scan.rake",
          "match": "\\\\[+*]\\\\"
        },
        {
          "name": "keyword.operator.scan.rake",
          "match": "\\\\(min|max)\\\\"
        },
        {
          "name": "keyword.operator.comparison.rake",
          "match": "<=|>=|!=|==|<(?!-)|(?<!-)>"
        },
        {
          "name": "keyword.operator.logical.rake",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.arithmetic.rake",
          "match": "[+\\-*/%]"
        },
        {
          "name": "keyword.operator.bitshift.rake",
          "match": "<<<|>>>|<<|>>"
        },
        {
          "name": "keyword.operator.type.rake",
          "match": ":"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.definition.block.rake",
          "match": "[{}]"
        },
        {
          "name": "punctuation.definition.arguments.rake",
          "match": "[()]"
        },
        {
          "name": "punctuation.separator.rake",
          "match": "[,|]"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.primitive.rake",
          "match": "\\b(float|double|int|int8|int16|int64|uint|uint8|uint16|uint64|bool|mask)\\b"
        },
        {
          "name": "storage.type.compound.rake",
          "match": "\\b(vec2|vec3|vec4|mat3|mat4)\\b"
        },
        {
          "name": "storage.type.collection.rake",
          "match": "\\b(rack|pack)\\b"
        },
        {
          "name": "entity.name.type.rake",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "literals": {
      "patterns": [
        {
          "name": "constant.numeric.float.rake",
          "match": "(?<!\\w)-?[0-9]+\\.[0-9]*([eE][+-]?[0-9]+)?(?!\\w)"
        },
        {
          "name": "constant.numeric.integer.rake",
          "match": "(?<!\\w)-?[0-9]+(?!\\w)"
        },
        {
          "name": "constant.language.boolean.rake",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.special.rake",
          "match": "\\b(lanes)\\b|@"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.rake",
          "match": "\\b[a-z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
